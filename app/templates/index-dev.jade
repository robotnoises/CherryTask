doctype html
html(lang='en', ng-app='cherry')
  head
    include ./partials/meta.jade
    = '\n'
    //Fonts & icons
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='bower_components/pixeden-stroke-7-icon/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css')
    = '\n'
    //Style
    link(rel='stylesheet' href='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.css')
    link(rel='stylesheet' href='bower_components/angular-material/angular-material.css')
    link(rel='stylesheet', href='assets/style/compiled/app.css')
    link(rel='stylesheet', href='assets/style/compiled/app.css.map')
    = '\n'
  body
    = '\n'
    //Navigation
    include ./partials/navigation.jade
    = '\n'
    //Main
    div(class='main')
      button(class='modal-trigger', data-modal='modal-full') Launch Modal
      = '\n'
      div(ng-view)
    = '\n'
    //Modal
    include ./partials/modal.jade
    = '\n'
    //Library
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-animate/angular-animate.js')
    script(src='bower_components/angular-aria/angular-aria.js')
    script(src='bower_components/angular-material/angular-material.js')
    script(src='bower_components/angular-messages/angular-messages.js')
    script(src='bower_components/angular-route/angular-route.js')
    script(src='bower_components/firebase/firebase.js')
    script(src='bower_components/angularfire/dist/angularfire.js')
    script(src='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.js')
    script(src='bower_components/angular-perfect-scrollbar/src/angular-perfect-scrollbar.js')
    = '\n'
    //Application
    script(src='app.js')
    = '\n'
    //Lib
    script(src='assets/js/lib/classie.js')
    script(src='assets/js/lib/modalEffects.js')
    = '\n'
    //Globals
    script(src='global/dependencies.js')
    script(src='global/services/logger.js')
    script(src='global/services/cherryAuth.js')
    script(src='global/services/api.js')
    script(src='global/services/auth.js')
    script(src='global/services/firebase.utils.js')
    script(src='global/services/breadcrumb.js')
    script(src='global/directives/appversion-directive.js')
    script(src='global/directives/chat-directive.js')
    script(src='global/directives/pretty-loader.js')
    script(src='global/directives/cherry-form.js')
    script(src='global/directives/cherry-card.js')
    script(src='global/directives/mood.js')
    script(src='global/controllers/breadcrumb.js')
    script(src='global/controllers/modals.js')
    = '\n'
    //Configuration
    script(src='config/config.js')
    script(src='config/ngcloak-decorator.js')
    script(src='config/security.js')
    = '\n'
    //Register module dependencies
    script(src='modules/dependencies.js')
    //Project
    script(src='modules/project/routes.js')
    script(src='modules/project/controllers.js')
    = '\n'
    //Account
    script(src='modules/account/routes.js')
    script(src='modules/account/controllers.js')
    = '\n'
    //Sign in
    script(src='modules/signin/routes.js')
    script(src='modules/signin/controllers.js')
    = '\n'
    //Task
    script(src='modules/task/routes.js')
    script(src='modules/task/services.js')
    script(src='modules/task/controllers.js')
   