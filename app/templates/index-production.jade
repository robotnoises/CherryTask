doctype html
html(lang='en', ng-app='cherry')
  head
    include ./partials/meta.jade
    = '\n'
    //Fonts & icons
    link(href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='bower_components/pixeden-stroke-7-icon/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css')
    = '\n'
    //Style
    link(rel='stylesheet' href='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.css')
    link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.min.css')
    link(rel='stylesheet' href='dist/assets/bricks.min.css')
    link(rel='stylesheet', href='dist/app.min.css')
    = '\n'
    //Modern browsers, only
    script(src='dist/assets/doorman.min.js')
    script.
      doorman.check();
    = '\n'
  body
    = '\n'
    //Navigation
    include ./partials/navigation.jade
    = '\n'
    //Main
    div(class='main')
      = '\n'
      div(ng-view)
      = '\n'
      include ./partials/modal.jade
    = '\n'
    //Library
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.8/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-animate.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-aria.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-messages.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.8/angular-route.min.js')
    script(src='//cdn.firebase.com/js/client/2.2.2/firebase.js')
    script(src='//cdn.firebase.com/libs/angularfire/1.0.0/angularfire.min.js')
    script(src='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.js')
    script(src='bower_components/angular-perfect-scrollbar/src/angular-perfect-scrollbar.js')
    script(src='bower_components/angular-file-upload/dist/angular-file-upload.min.js')
    script(src='//sdk.amazonaws.com/js/aws-sdk-2.2.4.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.10.1/lodash.min.js')
    
    = '\n'
    //Application
    script(src='dist/app.min.js')
