doctype html
html(lang='en', ng-app='myApp')
  head
    include ./partials/meta.jade
    = '\n'
    //Fonts & icons
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='bower_components/pixeden-stroke-7-icon/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css')
    = '\n'
    //Style
    link(rel='stylesheet', href='//cdn.jsdelivr.net/pure/0.6.0/pure-min.css')
    link(rel='stylesheet' href='//yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css')
    link(rel='stylesheet' href='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.css')
    link(rel='stylesheet', href='dist/app.min.css')
    = '\n'
  body
    = '\n'
    //Navigation
    include ./partials/navigation.jade
    = '\n'
    //Main
    div(class='main')
      
      button(class='md-trigger', data-modal='modal-full') Launch Modal
      
      div(ng-view, class='pure-g')
      = '\n'
      //Modal
      div(class='md-modal md-effect-full' id='modal-full')
        div(class='md-content perfect')
          h3 Modal Dialog
            div
              p This is a modal window. You can do the following things with it:</p>
            
              button(class='md-close') Close me!
      = '\n'
      //Modal Overlay
      div(class='md-overlay')
    = '\n'
    //Library
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.8/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.8/angular-route.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.8/angular-loader.min.js')
    script(src='//cdn.firebase.com/js/client/2.2.2/firebase.js')
    script(src='//cdn.firebase.com/libs/angularfire/1.0.0/angularfire.min.js')
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='bower_components/perfect-scrollbar/min/perfect-scrollbar.min.js')
    = '\n'
    //Application
    script(src='dist/app.min.js')
